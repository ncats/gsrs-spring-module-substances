<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <packaging>pom</packaging>

    <modules>
        <module>gsrs-module-applications-spring-boot-starter</module>
        <module>gsrs-module-applications-spring-boot-autoconfigure</module>
        <module>applications-api</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.7</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>gov.nih.ncats</groupId>
    <artifactId>gsrs-module-applications</artifactId>
    <version>3.1.55-SNAPSHOT</version>
    <name>GSRS Application Module</name>
    <description>GSRS Application Module for Spring Boot</description>

    <scm>
        <url>https://github.com/ncats/gsrs-spring-module-drug-applications.git</url>
    </scm>

    <properties>
        <java.version>17</java.version>
        <spring-boot.version>3.5.7</spring-boot.version>
        <spring-cloud.version>2025.0.0</spring-cloud.version>
        <gsrs.version>3.1.55-SNAPSHOT</gsrs.version>
        <gsrs.application.version>3.1.55-SNAPSHOT</gsrs.application.version>
        <log4j2.version>2.22.1</log4j2.version>
        <!-- TO BE REMOVE -->
        <gsrs.substance.version>3.1.55-SNAPSHOT</gsrs.substance.version>
    </properties>

    <!-- NEW Maven Central Repository BEGIN - July 2025 -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.sonatype.central</groupId>
                <artifactId>central-publishing-maven-plugin</artifactId>
                <version>0.8.0</version>
                <extensions>true</extensions>
                <configuration>
                    <publishingServerId>central</publishingServerId>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>central-repo1-maven2</id>
            <url>https://repo1.maven.org/maven2</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>central</id>
            <url>https://central.sonatype.com/repository/maven-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <id>central</id>
            <url>https://central.sonatype.com/repository/maven-snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>central</id>
            <url>https://ossrh-staging-api.central.sonatype.com/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

</project>